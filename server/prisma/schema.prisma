// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id         String   @id @default(uuid())
  title      String   @unique
  created_at DateTime

  //vai salvar no banco de dados desta maneira:
  @@map("habits")
}
